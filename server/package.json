{
  "name": "assessment-api",
  "version": "0.0.1",
  "description": "API to ship with CarrierDirect's front-end code assessment",
  "main": "src/server.js",
  "scripts": {
    "build-ts": "tsc",
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CarrierDirect/assessment-api.git"
  },
  "author": "CarrierDirectJack",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CarrierDirect/assessment-api/issues"
  },
  "homepage": "https://github.com/CarrierDirect/assessment-api#readme",
  "dependencies": {
    "event-stream": "^4.0.1",
    "express": "^4.16.3",
    "jest": "^23.6.0",
    "lowdb": "^1.0.0",
    "nodemon": "^1.18.4",
    "supertest": "^3.3.0",
    "uniqid": "^5.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.2",
    "@types/lowdb": "^1.0.5",
    "@types/uniqid": "^4.1.2",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  }
}
